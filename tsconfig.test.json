{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "baseUrl": "./",
    "lib": ["DOM", "es2019", "es2017.object"],
    "paths": {
      "@styles/*": ["./src/styles/*"],
      "@type/*": ["./src/types/*"],
      "@utils/*": ["./src/utils/*"],
      "@components/*": ["./src/components/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@config/*": ["./src/configs/*"]
    },
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node", "mocha"]
  },
  "include": ["./src/**/*", "types"]
}
