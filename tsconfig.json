{
  "include": ["./src/**/*", "types"],
  "compilerOptions": {
    "module": "es2020",
    "target": "es2020",
    "moduleResolution": "node",
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "@styles/*": ["./src/styles/*"],
      "@type/*": ["./src/types/*"],
      "@utils/*": ["./src/utils/*"],
      "@components/*": ["./src/components/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@config/*": ["./src/configs/*"],
      "@icons/*": ["./src/icons/*"]
    },
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "no-unused-variable": false,
    "noUnusedLocals": false,
    "allowSyntheticDefaultImports": true,
    "types": ["node"]
  }
}
